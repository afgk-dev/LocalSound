<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_no_musics"
        style="?attr/textAppearanceBodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nenhuma música encontrada"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botao_ale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aleatório"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tracks_list_title"
        app:layout_constraintBottom_toBottomOf="@+id/tracks_list_title"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="146dp"/>

    <Button
        android:id="@+id/botao_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="408dp"
        android:text="Sequencial"
        app:layout_constraintBottom_toBottomOf="@+id/tracks_list_title"
        app:layout_constraintEnd_toStartOf="@+id/botao_ale"
        app:layout_constraintTop_toTopOf="@+id/tracks_list_title"
        app:layout_constraintVertical_bias="0.666"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="146dp"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/tracks_list_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tracks_list,tracks_list_title,botao_ale,botao_sec" />

    <TextView
        android:id="@+id/tracks_list_title"
        style="?attr/textAppearanceTitleLargeEmphasized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginTop="292dp"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:text="Suas músicas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tracks_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tracks_list_title"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>