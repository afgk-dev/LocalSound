<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.search.SearchBar
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar músicas..." />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linear_layout_playlist_carrousel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/playlist_list_title"
                style="@style/TextAppearance.Material3.TitleLarge.Emphasized"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minhas Playlists"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp"
                android:paddingHorizontal="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/playlists_carousel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/navigate_to_create_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/md_theme_surfaceContainerHigh"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:id="@+id/playlist_card"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:elevation="1dp"
                        android:backgroundTint="@color/md_theme_surfaceContainerHighest"
                        android:padding="8dp"
                        app:cardCornerRadius="16dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/outline_add_circle_outline_24"
                            app:tint="@color/md_theme_onSurfaceVariant"/>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        style="@style/TextAppearance.Material3.BodyLarge.Emphasized"
                        android:id="@+id/playlist_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Criar nova \nPlaylist"
                        android:textColor="@color/md_theme_onSurface"
                        android:padding="8dp"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <TextView
            android:id="@+id/text_no_musics"
            style="?attr/textAppearanceBodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nenhuma música encontrada"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/tracks_list_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="search_bar, linear_layout_playlist_carrousel, linear_layout_tracks_list"
            tools:ignore="NotSibling" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linear_layout_tracks_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingTop="32dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/linear_layout_playlist_carrousel"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tracks_list_title"
                style="?attr/textAppearanceTitleLargeEmphasized"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suas músicas"
                android:textColor="@color/md_theme_onSurface"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tracks_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.search.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Pesquise na sua playlist..."
        app:layout_anchor="@id/search_bar">

        <LinearLayout
            android:id="@+id/text_no_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/baseline_search_off_24" />

            <TextView
                style="?attr/textAppearanceBody1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nenhum resultado encontrado" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tracks_search_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"/>
    </com.google.android.material.search.SearchView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>